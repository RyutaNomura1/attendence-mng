<% if current_user.already_following?(user)%>
  <%= link_to user_relationships_path(user), method: :delete, remote: true do%>
    <button class="btn btn-success-reverse fs-11 py-1 px-2" id="rspec_user_path_unfollow_button">フォロー解除</button>
  <% end %>
<% else %>
  <%= link_to user_relationships_path(user), method: :post, remote: true do %>
    <button class="btn btn-success fs-11 py-1 px-2" id="rspec_user_path_follow_button">フォローする</button>
  <% end %>    
<% end %>