<%= form_for (@question) do |f| %>    

  <%= render "shared/error_messages", object: f.object %>

  <%= f.label :question_title, "タイトル", class: "label-control"%>
  <%= f.text_field :question_title, class: 'form-control' %>

  <%= f.label :question_body, "内容", class: "label-control" %>　　　
  <%= f.text_area :question_body, class: 'form-control' %>
  <div class="submit-position">
    <%= f.submit locals[:button_text] , class: "btn btn-success" , id: "rspec_create_question_button" %>
  </div>
<% end %>