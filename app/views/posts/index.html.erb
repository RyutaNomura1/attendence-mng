<section class = "w1100-container">
  <h1>投稿一覧</h1>
  <% @posts.each do |post| %>
  <section class = "post-container">
      <%= link_to user_path(post.user) do %>
        <%= attachment_image_tag post.user, :profile_image, class: "profile_image m-2", fallback: "no_image.jpg", size: '40x40' %>
      <% end %>
    <div class="d-inline-block align-middle">
      <%= link_to user_path(post.user) do %>
        <p class="post-top-element d-inline post-username"><%= post.user.username %></p>
      <% end %>
      <p class="post-top-element d-inline post-location"><%= post.location %></p>
      <p class="post-top-element post-title"><%= post.title %></p>
    </div>
    <%= link_to post_favorites_path(post), method: :post, remote: true do %>
      <%= attachment_image_tag post, :post_image, class: "d-block", style: "margin: 0 auto ;", size: '500x500' %>
    <% end %>
    <div>
      <%= simple_format post.body, class: "post-body" %>
        
      <p class = "pb-1 post-created-at"><%= post.created_at.strftime("%Y-%m-%d %H:%M") %></p>
    </div>
      <ul class="mb-0 pr-3 pb-1 text-right">
        <div class="post-font-awesome d-inline-block" id="favorite-post-<%= post.id%>">
          <%= render "favorites/favorite", post: post %>
        </div>
    <% if current_user.id == post.user.id%>
        <%= link_to edit_post_path(post), class: " d-inline-block" do %>
            <i class="fas fa-pen post-font-awesome"></i>
        <% end %>
        <%= link_to post_path(post), class: "d-inline-block", data: {confirm: "投稿を削除しますか？"}, method: :delete do %>
          <i class="far fa-trash-alt post-font-awesome"></i>
        <% end %>
      </ul>
    <% end %>  
  </section>
  <% end %>
  
</section>