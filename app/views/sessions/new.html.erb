<section class="w1100-container">
  <%= form_for(:session, url: login_path) do |f| %>
  
    <%= f.label :email, "メールアドレス", class: "label-control" %>
    <%= f.email_field :email, class: 'form-control ' %>
  
    <%= f.label :password, "パスワード", class: "label-control" %>
    <%= f.password_field :password, class: 'form-control' %>
    
    <%= f.label :remember_me, class: "checkbox inline pt-4 pl-1 pb-2" do %>
      <%= f.check_box :remember_me %>
      <span>ログイン情報を保存する</span>
    <% end %>
    <div class= "submit-position">
      <%= f.submit "ログイン", class: "btn btn-success" %>
    </div>  
    <!--ボタンに表示される"Log in"を削除した-->
  <% end %>
  <div class="text-right">
    <%= link_to "初めての方はこちら", new_user_path %>
  </div>
</section>